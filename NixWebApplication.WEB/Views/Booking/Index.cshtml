@model PaginatedList<BookingModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Income">Count Income</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GuestSurnameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">GuestSurname</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RoomNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">RoomName</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["BookingDateParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">BookingDate</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EnterDateParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">EnterDate</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LeaveDateParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">LeaveDate</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingGuest.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingRoom.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnterDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_PaginationPartial" />
